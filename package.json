    "@iarna/toml": "^2.2.5",
    "commander": "^14.0.2",
    "mime-types": "^3.0.1",
    "openai": "^6.7.0",
    "qrcode": "^1.5.4",
    "resend": "^6.4.0",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.5.2",
    "@types/qrcode": "^1.5.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
