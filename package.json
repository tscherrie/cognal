{
  "name": "cognal",
  "version": "0.1.0",
  "description": "Signal bridge for Claude Code and Codex with single-active-agent runtime",
  "type": "module",
  "bin": {
    "cognal": "dist/cli.js",
    "cognald": "dist/daemon.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev:cli": "tsx src/cli.ts",
